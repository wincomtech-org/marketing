      <div id="pageIn"> 
        {include file="inc/ur_here.tpl"}
        <div class="productList"> 
          <!--{foreach from=$product_list name=product_list item=product}--> 
          <dl<!--{if $smarty.foreach.product_list.last}--> class="last"<!--{/if}-->>
