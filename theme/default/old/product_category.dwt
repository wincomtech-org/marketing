            <p class="price">{$lang.price}ï¼š{$product.price}</p>
            <p><a href="{$product.url}" class="btn">{$lang.product_buy}</a></p>
          </dd>
        </dl>
        <!--{/foreach}-->
        <div class="clear"></div>
      </div>
      {include file="inc/pager.tpl"} 
    </div>
    <div class="clear"></div>
